<%
require "no_user_exception"

begin
	user = current_user
rescue NoUserException
	user = nil
end	
%>
<!DOCTYPE html>
<html>
<head>
  <title>SimpleRhex</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">RHEx</a>
	  <% if user %>
      <p class="pull-right">
        Logged in as <%= user.given_name %> <%= user.family_name %>
      </p>
	  <% end %>
    </div>
  </div>
</div>

<div class="container">
<%= yield %>
</div>

</body>
</html>
